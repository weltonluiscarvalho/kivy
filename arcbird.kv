Manager:
  Menu:
    name: 'menu'
  Game:
    name: 'game'
  GameOver:
    name: 'game_over'

<Menu>:
  BoxLayout:
    canvas:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        size: self.size
        pos: self.pos
        source: 'fundo_casa.jpg'
    orientation: 'vertical'
    padding: '120dp', '29dp'
    spacing: '100dp'
    # Widget:
    Label:
      text: "ArcBird"
      font_size: '70dp'
    # Widget:
    BoxLayout:
      padding: '50dp'
      spacing: '50dp'
      Button:
        text:'Start'
        on_release: app.root.current = 'game'
      Button:
        text:'Exit'
        on_release: app.stop()

<Player>:
  source: 'bola-de-basquete.png'

<Game>:
  canvas:
    Rectangle:
      size: self.size
      pos: self.pos
      source: 'fundo_casa.jpg'
  FloatLayout:
    Player:
      id: player
      allow_stretch: True
      size_hint: None, None
      size: root.height / 15, root.width / 15
      x: root.width / 20
      y: root.height / 2

<GameOver>:
  BoxLayout:
    canvas:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        size: self.size
        pos: self.pos
        source: 'fundo_casa_cinza.jpg'
    orientation: 'vertical'
    padding: '80dp', '70dp'
    spacing: '100dp'
    # Widget:
    #   size_hint_y: 0.3
    Label:
      text: "Game Over"
      font_size: '70dp'
    Button:
      text: 'Try again!'
      on_release: app.root.current = 'game'
    Button:
      text: 'Exit'
      on_release: app.stop()


<Obstacle>:
  canvas:
    Color:
      rgba: self.color

    Rectangle:
      size: self.size
      pos: self.pos

  size_hint: None, None
  width: '100dp'
