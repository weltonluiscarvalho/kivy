#:kivy 1.0.9

<PongPaddle>:
  size: 25, 200
  canvas:
    Rectangle:
      pos: self.pos
      size: self.size

<PongBall>:
  size: 50, 50
  # canvas:
  #   Ellipse:
  #     pos: self.pos
  #     size: self.size

  canvas:
    Ellipse:
      source: 'bola-de-basquete.png'
      pos: self.pos
      size: self.size

<PongGame>:
  ball: pong_ball
  player1: player_left
  player2: player_right
  button_pause: button_pause
  label_wins: wins_game

  canvas:
    Rectangle:
      pos: self.center_x - 5, 0
      size: 10, self.height

  Label:
    font_size: 70
    center_x: root.width / 4
    top: root.top - 50
    text: str(root.player1.score) 

  Label:
    font_size: 70
    center_x: root.width * 3 / 4
    top: root.top - 50
    text: str(root.player2.score)

  PongBall:
    id: pong_ball
    center: self.parent.center

  PongPaddle:
    id: player_left
    x: root.x 
    center_y: root.center_y

  PongPaddle:
    id: player_right
    x: root.width - self.width
    center_y: root.center_y

  Button:
    id: button_pause
    center_x: root.center_x
    center_y: root.height / 10
    size: 100, 40
    text: "pause"

  Label:
    id: wins_game
    center_x: root.center_x
    center_y: root.center_y
    size: 100, 100
    font_size: 70
    text: ""
    opacity: 0.0
